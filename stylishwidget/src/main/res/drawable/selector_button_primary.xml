<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true" android:state_pressed="false" android:drawable="@drawable/layerlist_button_primary">


    </item>
    <item android:state_enabled="false" android:drawable="@drawable/layerlist_button_primary_disable">

    </item>
    <item  android:state_pressed="true">
        <layer-list>
            <item android:bottom="10px" android:left="5px" android:right="5px" android:top="10px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <corners android:radius="5px" />
                </shape>
            </item>
            <item android:bottom="10px" android:left="5px" android:right="5px" android:top="10px">
                <shape android:shape="rectangle">
                    <solid android:color="@color/buttonPressOverlay" />
                    <corners android:radius="5px" />
                </shape>
            </item>
        </layer-list>

    </item>
</selector>