<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="messageBox">
        <attr name="message" format="string"/>
        <attr name="textStyle" format="enum">
            <enum name="normal" value="0"/>
            <enum name="bold" value="1"/>
            <enum name="italic" value="2"/>
        </attr>
        <attr name="innerPadding" format="dimension"/>
        <attr name="innerLeftPadding" format="dimension"/>
        <attr name="innerTopPadding" format="dimension"/>
        <attr name="innerRightPadding" format="dimension"/>
        <attr name="innerBottomPadding" format="dimension"/>
        <attr name="drawable" format="reference"/>
        <attr name="drawablePadding" format="dimension"/>
        <attr name="boxBackground" format="color"/>
    </declare-styleable>
</resources>