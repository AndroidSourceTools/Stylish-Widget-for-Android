<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/colorBlue_50"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <com.app.infideap.stylishwidget.view.ATextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plainbuttonsample"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.app.infideap.stylishwidget.view.AButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Default Android" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Accent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accent" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Success"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Success" />


        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Info" />


        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Warning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Warning" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Danger"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danger" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Light" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dark" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <com.app.infideap.stylishwidget.view.ATextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/plainbuttonsampledisable"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold" />

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />


        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Primary"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Accent"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Accent" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Success"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Success" />


        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Info"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="Info" />


        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Warning"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="Warning" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Danger"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Danger" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Light"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="Light" />

        <com.app.infideap.stylishwidget.view.AButton
            style="@style/Button.Dark"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_height="wrap_content"
            android:text="Dark" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>